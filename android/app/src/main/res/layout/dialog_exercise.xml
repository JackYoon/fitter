<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/row_exercise"
                android:visibility="gone" />

            <EditText
                android:id="@+id/exName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_exercise" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/row_description" />

            <EditText
                android:id="@+id/exDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_description" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/row_elapsed_time" />

            <EditText
                android:id="@+id/exTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_elpased_time" />

        </TableRow>

    </TableLayout>

    <Spinner
        android:id="@+id/description_template_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawSelectorOnTop="true" />

    <co.launcharea.fitter.widget.DescriptionInputView
        android:id="@+id/description_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>